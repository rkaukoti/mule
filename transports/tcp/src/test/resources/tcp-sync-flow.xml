<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tcp="http://www.mulesoft.org/schema/mule/transport/tcp"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/transport/tcp http://www.mulesoft.org/schema/mule/transport/tcp/current/mule-transport-tcp.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <global-property name="test.endpoint" value="tcp://localhost:${port1}"/>

    <tcp:connector name="tcpConnector" clientSoTimeout="60000"
                   serverSoTimeout="60000">
        <tcp:length-protocol payloadOnly="true"/>
    </tcp:connector>

    <!-- what is this for? -->
    <tcp:endpoint name="clientEndpoint" address="${test.endpoint}"/>


    <flow name="service">

        <tcp:inbound-endpoint address="${test.endpoint}"
                              exchange-pattern="request-response"/>

        <echo-component/>
    </flow>

</mule>
