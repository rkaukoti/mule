<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:http="http://www.mulesoft.org/schema/mule/transport/http"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/transport/http http://www.mulesoft.org/schema/mule/transport/http/current/mule-transport-http.xsd

          http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <flow name="Streaming">
        <http:inbound-endpoint address="http://localhost:${port1}/streaming" exchange-pattern="request-response"/>
        <component>
            <singleton-object class="org.mule.compatibility.transport.http.components.StreamingResponseComponent"/>
        </component>
    </flow>

</mule>
